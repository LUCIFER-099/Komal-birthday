<script>

let isActive = false;
let seconds = localStorage.getItem("activeTime")
    ? parseInt(localStorage.getItem("activeTime"))
    : 0;

const timerEl = document.getElementById("timer");
const statusEl = document.getElementById("status");

/* Format time */
function formatTime(sec) {

    let h = Math.floor(sec / 3600);
    let m = Math.floor((sec % 3600) / 60);
    let s = sec % 60;

    return (
        String(h).padStart(2, "0") + ":" +
        String(m).padStart(2, "0") + ":" +
        String(s).padStart(2, "0")
    );
}

/* Update display */
function updateDisplay() {
    timerEl.innerText = formatTime(seconds);
}

updateDisplay();

/* Active mode */
function setActive() {
    isActive = true;
    statusEl.innerHTML = "Status: Active ðŸŸ¢";
}

/* Away mode */
function setAway() {
    isActive = false;
    statusEl.innerHTML = "Status: Away ðŸ”´";
}

/* Reset */
function resetTime() {

    if (confirm("Reset active time?")) {
        seconds = 0;
        localStorage.setItem("activeTime", 0);
        updateDisplay();
    }
}

/* Timer loop */
setInterval(() => {

    if (isActive) {
        seconds++;
        localStorage.setItem("activeTime", seconds);
        updateDisplay();
    }

}, 1000);

/* Auto-away when tab hidden */
document.addEventListener("visibilitychange", () => {

    if (document.hidden) {
        setAway();
    }

});

</script>

